{
  "app": "poetry run python app.py",
  "watch": {
    "include": [
      "{{cookiecutter.service_name}}/**",
      "cdk/{{cookiecutter.service_name}}/**"
    ],
    "exclude": [
      "{{cookiecutter.service_name}}/**/*.pyc",
      "{{cookiecutter.service_name}}/**/__pycache__",
      "cdk/**/*.pyc",
      "cdk/**/__pycache__"
    ]
  },
  "build": "make build"
}
